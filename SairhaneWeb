import { notFound } from 'next/navigation';

const sairler = {
  klasik: [
    {
      ad: "Yahya Kemal Beyatl캼",
      siirler: [
        { id: 1, baslik: "Sessiz Gemi", icerik: "Art캼k demir almak g칲n칲 gelmi릅e zamandan..." },
        { id: 2, baslik: "End칲l칲s'te Raks", icerik: "Zil, 르l ve g칲l. Bu bah칞ede raks캼n b칲t칲n h캼z캼..." },
      ]
    },
    {
      ad: "Ahmet Ha를m",
      siirler: [
        { id: 3, baslik: "Merdiven", icerik: "A캼r a캼r 칞캼kacaks캼n bu merdivenlerden..." },
