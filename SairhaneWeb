---------------------------
page.tsx 
'use client';

import { useState, useEffect } from 'react';
import { useRouter } from 'next/navigation';
import { ref, onValue, push, update, increment, get, set } from 'firebase/database';
import { database, auth } from './firebase/config';
import Cookies from 'js-cookie';

interface Siir {
  id: string;
  baslik: string;
  icerik: string;
  sair: string;
  sairId: string;
  begeniSayisi: number;
  yorumSayisi: number;
  tarih: number;
  kaydedildi: boolean;
  begenenler?: {
    [key: string]: boolean;
  };
  yorumlar?: {
    [key: string]: {
      kullaniciAdi: string;
      yorum: string;
      tarih: number;
    }
  };
}

export default function Home() {
  const [siirler, setSiirler] = useState<Siir[]>([]);
  const [yorumYapilacakSiir, setYorumYapilacakSiir] = useState<string | null>(null);
  const [yorumMetni, setYorumMetni] = useState('');
  const router = useRouter();

  useEffect(() => {
    const token = Cookies.get('auth-token');
    if (!token) {
      router.push('/kayit');
      return;
    }

    const user = auth.currentUser;
    if (!user) {
      router.push('/kayit');
      return;
    }

    // Tüm şiirleri dinle
    const siirlerRef = ref(database, 'siirler');
    onValue(siirlerRef, (snapshot) => {
      const data = snapshot.val();
      if (data) {
        const siirlerArray = Object.entries(data)
          .map(([id, siir]: [string, any]) => ({
            id,
            ...siir
          }))
          .sort((a, b) => b.tarih - a.tarih);
        setSiirler(siirlerArray);
      } else {
        setSiirler([]);
      }
    });
  }, [router]);

  const handleBegeni = async (siir: Siir) => {
    const user = auth.currentUser;
    if (!user) {
      router.push('/kayit');
      return;
    }

    try {
      const siirRef = ref(database, `siirler/${siir.id}`);
      const siirSnapshot = await get(siirRef);
      const siirData = siirSnapshot.val();

      // Kullanıcı daha önce beğenmiş mi kontrol et
      if (siirData.begenenler && siirData.begenenler[user.uid]) {
        // Beğeniyi kaldır
        await update(siirRef, {
          [`begenenler/${user.uid}`]: null,
          begeniSayisi: increment(-1)
        });

        // Şiir sahibinin beğeni sayısını güncelle
        const sahipRef = ref(database, `users/${siir.sairId}`);
        await update(sahipRef, {
          likeCount: increment(-1)
        });
      } else {
        // Beğeniyi ekle
        await update(siirRef, {
          [`begenenler/${user.uid}`]: true,
          begeniSayisi: increment(1)
        });

        // Şiir sahibinin beğeni sayısını güncelle
        const sahipRef = ref(database, `users/${siir.sairId}`);
        await update(sahipRef, {
          likeCount: increment(1)
        });
      }
    } catch (error) {
      console.error('Beğeni işlemi sırasında hata oluştu:', error);
      alert('Beğeni işlemi sırasında bir hata oluştu');
    }
  };

  const handleYorum = async (siir: Siir) => {
    const user = auth.currentUser;
    if (!user) return;

    try {
      const siirRef = ref(database, `siirler/${siir.id}`);
      await update(siirRef, {
        yorumSayisi: increment(1)
      });

      // Kullanıcının yorum sayısını güncelle
      const userRef = ref(database, `users/${siir.sairId}`);
      await update(userRef, {
        yorumSayisi: increment(1)
      });
    } catch (error) {
      console.error('Yorum eklenirken hata oluştu:', error);
    }
  };

  const handleYorumYap = async (siirId: string) => {
    const user = auth.currentUser;
    if (!user) {
      router.push('/kayit');
      return;
    }

    if (!yorumMetni.trim()) {
      alert('Lütfen bir yorum yazın');
      return;
    }

    try {
      const yorumRef = ref(database, `siirler/${siirId}/yorumlar/${user.uid}`);
      const userRef = ref(database, `users/${user.uid}`);
      const siirRef = ref(database, `siirler/${siirId}`);
      
      // Kullanıcı bilgilerini al
      const userSnapshot = await get(userRef);
      const userData = userSnapshot.val();
      
      // Yorumu kaydet
      await set(yorumRef, {
        kullaniciAdi: `${userData.name} ${userData.surname}`,
        yorum: yorumMetni.trim(),
        tarih: Date.now()
      });

      // Şiirin yorum sayısını güncelle
      await update(siirRef, {
        yorumSayisi: increment(1)
      });

      // Şiir sahibinin yorum sayısını güncelle
      const siirSnapshot = await get(siirRef);
      const siirData = siirSnapshot.val();
      if (siirData && siirData.sairId) {
        const sahipRef = ref(database, `users/${siirData.sairId}`);
        await update(sahipRef, {
          commentCount: increment(1)
        });
      }

      setYorumMetni('');
      setYorumYapilacakSiir(null);
    } catch (error) {
      console.error('Yorum yapılırken hata oluştu:', error);
      alert('Yorum yapılırken bir hata oluştu');
    }
  };

  return (
    <div className="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-3xl mx-auto">
        <div className="space-y-6">
          {siirler.map((siir) => (
            <div key={siir.id} className="bg-white rounded-lg shadow p-6">
              <div className="flex items-center space-x-3 mb-4">
                <div className="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
                  <span className="text-indigo-600 font-medium">
                    {siir.sair ? siir.sair.split(' ').map(n => n[0]).join('') : '?'}
                  </span>
                </div>
                <div>
                  <p className="text-sm text-gray-500">{siir.sair}</p>
                  <h2 className="text-xl font-bold text-gray-900">{siir.baslik}</h2>
                </div>
              </div>
              <p className="text-gray-600 whitespace-pre-line mb-4">{siir.icerik}</p>
              <div className="flex items-center space-x-4">
                <button
                  onClick={() => handleBegeni(siir)}
                  className={`flex items-center space-x-1 ${
                    siir.begenenler && siir.begenenler[auth.currentUser?.uid || '']
                      ? 'text-red-600'
                      : 'text-gray-500 hover:text-indigo-600'
                  }`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fillRule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clipRule="evenodd" />
                  </svg>
                  <span>{siir.begeniSayisi || 0}</span>
                </button>
                <button
                  onClick={() => setYorumYapilacakSiir(yorumYapilacakSiir === siir.id ? null : siir.id)}
                  className="flex items-center space-x-1 text-gray-500 hover:text-indigo-600"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fillRule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clipRule="evenodd" />
                  </svg>
                  <span>{siir.yorumSayisi || 0}</span>
                </button>
                <span className="text-sm text-gray-500">
                  {siir.tarih ? new Date(siir.tarih).toLocaleDateString('tr-TR', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) : 'Tarih belirtilmemiş'}
                </span>
              </div>
              {yorumYapilacakSiir === siir.id && (
                <div className="mt-4">
                  <textarea
                    value={yorumMetni}
                    onChange={(e) => setYorumMetni(e.target.value)}
                    placeholder="Yorumunuzu yazın..."
                    className="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    rows={3}
                  />
                  <div className="mt-2 flex justify-end space-x-2">
                    <button
                      onClick={() => {
                        setYorumMetni('');
                        setYorumYapilacakSiir(null);
                      }}
                      className="px-4 py-2 text-sm text-gray-700 hover:text-gray-900"
                    >
                      İptal
                    </button>
                    <button
                      onClick={() => handleYorumYap(siir.id)}
                      className="px-4 py-2 text-sm text-white bg-indigo-600 rounded-lg hover:bg-indigo-700"
                    >
                      Gönder
                    </button>
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  );
}


