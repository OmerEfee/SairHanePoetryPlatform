        { id: 6, baslik: "Anlatam캼yorum", icerik: "A륿asam sesimi duyar m캼s캼n캼z..." },
      ]
    },
    {
      ad: "Cemal S칲reya",
      siirler: [
        { id: 7, baslik: "칖vercinka", icerik: "Seni 칞ok 칬zledim, seni 칞ok..." },
        { id: 8, baslik: "G칲l", icerik: "Bir g칲l yapra캼 d칲릀칲 suya..." },
      ]
    }
  ],
  halk: [
    {
      ad: "Karacao륿an",
      siirler: [
        { id: 9, baslik: "G칲zel Ne G칲zel Olmu릅un", icerik: "G칲zel ne g칲zel olmu릅un..." },
        { id: 10, baslik: "Elif", icerik: "Elif'in uru nak캼륿캼..." },
      ]
    },
    {
      ad: "Dadalo륿u",
      siirler: [
        { id: 11, baslik: "Ferman Padi르h캼n", icerik: "Ferman padi르h캼n, da륿ar bizimdir..." },
        { id: 12, baslik: "Kalkt캼 G칬칞 Eyledi", icerik: "Kalkt캼 g칬칞 eyledi Av르r elleri..." },
      ]
    }
  ]
};

export default function SiirDetay({ params }: { params: { id: string } }) {
  // T칲m 를irleri tek bir array'de topla
  const tumSiirler = Object.values(sairler).flatMap(kategori => 
    kategori.flatMap(sair => sair.siirler)
  );
  
  // 캻stenen 를iri bul
  const siir = tumSiirler.find(s => s.id === parseInt(params.id));
  
  if (!siir) {
    notFound();
  }

  // 료iri bul
  const sair = Object.values(sairler)
    .flatMap(kategori => kategori)
    .find(s => s.siirler.some(siir => siir.id === parseInt(params.id)));

  return (
    <main className="max-w-2xl mx-auto py-8 px-4">
      <div className="bg-white rounded-lg shadow p-6">
        <div className="text-center mb-8">
          <h1 className="text-3xl font-bold mb-2">{siir.baslik}</h1>
          <p className="text-xl text-gray-600">{sair?.ad}</p>
        </div>
        <div className="prose prose-lg mx-auto">
          <p className="whitespace-pre-line text-center">{siir.icerik}</p>
        </div>
        <div className="mt-8 flex justify-center space-x-4">
          <button className="flex items-center space-x-1 text-gray-600 hover:text-red-500">
            <span>仇벒잺</span>
            <span>Be른n</span>
          </button>
          <button className="flex items-center space-x-1 text-gray-600 hover:text-blue-500">
            <span>游눫</span>
            <span>Yorum Yap</span>
          </button>
        </div>
      </div>
    </main>
  );
} 

--------

'use client';

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import { ref, push, update, increment, get, set } from 'firebase/database';
import { database, auth } from '../firebase/config';
import Cookies from 'js-cookie';

const TEMALAR = [
  'Do르',
  'A륾',
  'Hayat',
  '칐l칲m',
  'Sevgi',
  'H칲z칲n',
  'Mutluluk',
  'Yaln캼zl캼k',
  'Umut',
  '칐zg칲rl칲k',
  'Vatan',
  'Aile',
  'Arkada륿캼k',
  'Ba르r캼',
  'Ba르r캼s캼zl캼k',
  'Ge칞mi',
  'Gelecek',
  'Zaman',
  'Mevsimler',
  '룐hir',
  'K칬y',
  'Deniz',
  'Da륿ar',
  'G칬ky칲z칲',
  'Y캼ld캼zlar',
  'Ay',
  'G칲ne',
  'Ya릀ur',
  'Kar',
  'R칲zgar'
];

export default function SiirYaz() {
  const [baslik, setBaslik] = useState('');
  const [icerik, setIcerik] = useState('');
  const [tema, setTema] = useState('');
  const [hata, setHata] = useState('');
  const router = useRouter();

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!baslik.trim() || !icerik.trim() || !tema) {
      alert('L칲tfen t칲m alanlar캼 doldurun');
      return;
    }

    try {
      const user = auth.currentUser;
      if (!user) {
        router.push('/kayit');
        return;
      }

      const userRef = ref(database, `users/${user.uid}`);
      const userSnapshot = await get(userRef);
      const userData = userSnapshot.val();

      const siirRef = ref(database, 'siirler');
      const yeniSiirRef = await push(siirRef);
      await set(yeniSiirRef, {
        baslik: baslik.trim(),
        icerik: icerik.trim(),
        tema,
        sair: `${userData.name} ${userData.surname}`,
        sairId: user.uid,
        begeniSayisi: 0,
        yorumSayisi: 0,
        tarih: Date.now(),
        olusturmaZamani: Date.now()
      });

      // Kullan캼c캼n캼n 를ir say캼s캼n캼 g칲ncelle
      await update(userRef, {
        poemCount: increment(1)
      });

      router.push('/');
    } catch (error) {
      console.error('룔ir payla캼l캼rken hata olu릆u:', error);
      alert('룔ir payla캼l캼rken bir hata olu릆u');
    }
  };

  return (
    <div className="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-2xl mx-auto">
        <div className="bg-white shadow rounded-lg p-6">
          <h1 className="text-2xl font-bold text-gray-900 mb-6">Yeni 룔ir Payla</h1>
          
          {hata && (
            <div className="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
              {hata}
            </div>
          )}

          <form onSubmit={handleSubmit} className="space-y-6">
            <div>
              <label htmlFor="baslik" className="block text-sm font-medium text-gray-700">
                Ba륿캼k
              </label>
              <input
                type="text"
                id="baslik"
                value={baslik}
                onChange={(e) => setBaslik(e.target.value)}
                className="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                required
              />
            </div>

            <div>
              <label htmlFor="tema" className="block text-sm font-medium text-gray-700">
                Tema
              </label>
              <select
                id="tema"
                value={tema}
                onChange={(e) => setTema(e.target.value)}
                className="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                required
              >
                <option value="">Tema Se칞in</option>
                {TEMALAR.map((t) => (
                  <option key={t} value={t}>
                    {t}
                  </option>
                ))}
              </select>
            </div>

            <div>
              <label htmlFor="icerik" className="block text-sm font-medium text-gray-700">
                룔ir
              </label>
              <textarea
                id="icerik"
                value={icerik}
                onChange={(e) => setIcerik(e.target.value)}
                rows={10}
                className="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                required
              />
            </div>

            <button
              type="submit"
              className="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Payla
            </button>
          </form>
        </div>
      </div>
    </div>
  );
} 

