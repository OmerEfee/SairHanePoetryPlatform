        sair: 'Can Y칲cel'
      },
      {
        id: '6',
        baslik: 'A륾',
        icerik: 'A륾\nG칲zel 른y\nA륾\nG칲zel 른y',
        sair: 'Can Y칲cel'
      },
      {
        id: '7',
        baslik: '칐l칲m',
        icerik: '칐l칲m\nG칲zel 른y\n칐l칲m\nG칲zel 른y',
        sair: 'Can Y칲cel'
      }
    ]
  }
];

export default function TurkceEserler() {
  const [secilenSair, setSecilenSair] = useState<Sair | null>(null);
  const [secilenSiir, setSecilenSiir] = useState<Siir | null>(null);
  const router = useRouter();

  useEffect(() => {
    const token = Cookies.get('auth-token');
    if (!token) {
      router.push('/kayit');
      return;
    }

    const user = auth.currentUser;
    if (!user) {
      router.push('/kayit');
      return;
    }
  }, [router]);

  return (
    <div className="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-7xl mx-auto">
        <h1 className="text-3xl font-bold text-gray-900 mb-8">T칲rk칞e Eserler</h1>
        
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {SAIRLER.map((sair) => (
            <div
              key={sair.id}
              className="bg-white rounded-lg shadow p-6 cursor-pointer hover:shadow-lg transition-shadow"
              onClick={() => setSecilenSair(sair)}
            >
              <h2 className="text-xl font-semibold text-gray-900 mb-2">{sair.ad}</h2>
              <p className="text-gray-600">{sair.siirler.length} 를ir</p>
            </div>
          ))}
        </div>

        {secilenSair && (
          <div className="mt-8">
            <div className="flex items-center justify-between mb-6">
              <h2 className="text-2xl font-bold text-gray-900">{secilenSair.ad}</h2>
              <button
                onClick={() => {
                  setSecilenSair(null);
                  setSecilenSiir(null);
                }}
                className="text-gray-500 hover:text-gray-700"
              >
                <svg xmlns="http://www.w3.org/2000/svg" className="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>

            <div className="space-y-4">
              {secilenSair.siirler.map((siir) => (
                <div key={siir.id}>
                  <div
                    className="bg-white rounded-lg shadow p-6 cursor-pointer hover:shadow-lg transition-shadow"
                    onClick={() => setSecilenSiir(secilenSiir?.id === siir.id ? null : siir)}
                  >
                    <h3 className="text-lg font-semibold text-gray-900">{siir.baslik}</h3>
                  </div>
                  {secilenSiir?.id === siir.id && (
                    <div className="mt-4 bg-white rounded-lg shadow p-6">
                      <p className="text-gray-600 whitespace-pre-line">{siir.icerik}</p>
                      <p className="text-gray-500 mt-4">- {siir.sair}</p>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  );
} 
