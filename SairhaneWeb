'use client';

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import Link from 'next/link';

export default function Giris() {
  const [kullaniciAdi, setKullaniciAdi] = useState('');
  const [sifre, setSifre] = useState('');
  const router = useRouter();

  const handleGiris = (e: React.FormEvent) => {
    e.preventDefault();
    // Gerçek bir doğrulama olmadan profil sayfasına yönlendiriyoruz
    router.push('/profil');
  };

  return (
    <div className="min-h-screen flex justify-center items-center py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
        <div>
          <h2 className="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Hesabına Giriş Yap
          </h2>
          <p className="mt-2 text-center text-sm text-gray-600">
            <Link href="/kayit" className="font-medium text-indigo-600 hover:text-indigo-500 underline">
              Hesabın yoksa kayıt ol
            </Link>
          </p>
        </div>
        <form className="mt-8 space-y-6" onSubmit={handleGiris}>
          <div className="rounded-md shadow-sm -space-y-px">
            <div className="mb-4">
              <label htmlFor="kullanici-adi" className="sr-only">Kullanıcı Adı</label>
              <input
                id="kullanici-adi"
                name="kullanici-adi"
                type="text"
                required
                className="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                placeholder="Kullanıcı Adı"
                value={kullaniciAdi}
                onChange={(e) => setKullaniciAdi(e.target.value)}
              />
            </div>
            <div>
              <label htmlFor="password" className="sr-only">Şifre</label>
              <input
                id="password"
                name="password"
                type="password"
                required
                className="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                placeholder="Şifre"
                value={sifre}
                onChange={(e) => setSifre(e.target.value)}
              />
            </div>
          </div>

          <div>
            <button
              type="submit"
              className="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Giriş Yap
            </button>
          </div>
        </form>
      </div>
    </div>
  );
} 

----

'use client';

import { useEffect, useState } from 'react';
import { useRouter } from 'next/navigation';
import { ref, onValue, remove, update, increment } from 'firebase/database';
import { database, auth } from '../firebase/config';
import Cookies from 'js-cookie';

interface Siir {
  id: string;
  baslik: string;
  icerik: string;
  sair: string;
  kayitTarihi: number;
}

export default function Kaydettiklerim() {
  const [siirler, setSiirler] = useState<Siir[]>([]);
  const [loading, setLoading] = useState(true);
  const router = useRouter();

  useEffect(() => {
    const token = Cookies.get('auth-token');
    if (!token) {
      router.push('/kayit');
      return;
    }

    const user = auth.currentUser;
    if (!user) {
      router.push('/kayit');
      return;
    }

    // Kullanıcının kaydettiği şiirleri dinle
    const kaydedilenlerRef = ref(database, `users/${user.uid}/kaydedilenler`);
    onValue(kaydedilenlerRef, (snapshot) => {
      const data = snapshot.val();
      if (data) {
        const siirlerArray = Object.entries(data).map(([id, siir]: [string, any]) => ({
          id,
          ...siir
        }));
        setSiirler(siirlerArray.sort((a, b) => b.kayitTarihi - a.kayitTarihi));
      } else {
        setSiirler([]);
      }
      setLoading(false);
    });
  }, [router]);

  const handleKaydetKaldir = async (siir: Siir) => {
    if (!window.confirm('Bu şiiri kaydedilenlerden kaldırmak istediğinizden emin misiniz?')) {
      return;
    }

    try {
      const user = auth.currentUser;
      if (!user) return;

      // Şiiri kaydedilenlerden kaldır
      const kaydedilenlerRef = ref(database, `users/${user.uid}/kaydedilenler/${siir.id}`);
      await remove(kaydedilenlerRef);

      // Şiirin kayıt sayısını güncelle
      const siirRef = ref(database, `siirler/${siir.id}`);
      await update(siirRef, {
        kayitSayisi: increment(-1)
      });

      // Yerel state'i güncelle
      setSiirler(siirler.filter(s => s.id !== siir.id));
    } catch (error) {
      console.error('Şiir kaldırılırken hata oluştu:', error);
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
          <p className="mt-4 text-gray-600">Yükleniyor...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-3xl mx-auto">
        <h1 className="text-3xl font-bold text-gray-900 mb-8">Kaydettiklerim</h1>
        {siirler.length === 0 ? (
          <div className="bg-white rounded-lg shadow p-6 text-center">
            <p className="text-gray-500">Henüz kaydedilmiş şiir bulunmuyor.</p>
          </div>
        ) : (
          <div className="space-y-6">
            {siirler.map((siir) => (
              <div key={siir.id} className="bg-white rounded-lg shadow p-6">
                <div className="flex justify-between items-start mb-4">
                  <div>
                    <h2 className="text-xl font-bold text-gray-900">{siir.baslik}</h2>
                    <p className="text-sm text-gray-500 mt-1">{siir.sair}</p>
                  </div>
                  <button
                    onClick={() => handleKaydetKaldir(siir)}
                    className="text-red-600 hover:text-red-800"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fillRule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clipRule="evenodd" />
                    </svg>
                  </button>
                </div>
                <p className="text-gray-600 whitespace-pre-line">{siir.icerik}</p>
                <p className="text-sm text-gray-500 mt-4">
                  Kayıt Tarihi: {new Date(siir.kayitTarihi).toLocaleDateString('tr-TR')}
                </p>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
} 


---------
'use client';

import { useEffect, useState } from 'react';
import { useRouter } from 'next/navigation';
import { ref, onValue, remove, update, increment } from 'firebase/database';
import { database, auth } from '../firebase/config';
import Cookies from 'js-cookie';

interface Siir {
  id: string;
  baslik: string;
  icerik: string;
  sair: string;
  kayitTarihi: number;
}

export default function Kaydettiklerim() {
  const [siirler, setSiirler] = useState<Siir[]>([]);
  const [loading, setLoading] = useState(true);
  const router = useRouter();

  useEffect(() => {
    const token = Cookies.get('auth-token');
    if (!token) {
      router.push('/kayit');
      return;
    }

    const user = auth.currentUser;
    if (!user) {
      router.push('/kayit');
      return;
    }

    // Kullanıcının kaydettiği şiirleri dinle
    const kaydedilenlerRef = ref(database, `users/${user.uid}/kaydedilenler`);
    onValue(kaydedilenlerRef, (snapshot) => {
      const data = snapshot.val();
      if (data) {
        const siirlerArray = Object.entries(data).map(([id, siir]: [string, any]) => ({
          id,
          ...siir
        }));
        setSiirler(siirlerArray.sort((a, b) => b.kayitTarihi - a.kayitTarihi));
      } else {
        setSiirler([]);
      }
      setLoading(false);
    });
  }, [router]);

  const handleKaydetKaldir = async (siir: Siir) => {
    if (!window.confirm('Bu şiiri kaydedilenlerden kaldırmak istediğinizden emin misiniz?')) {
      return;
    }

    try {
      const user = auth.currentUser;
      if (!user) return;

      // Şiiri kaydedilenlerden kaldır
      const kaydedilenlerRef = ref(database, `users/${user.uid}/kaydedilenler/${siir.id}`);
      await remove(kaydedilenlerRef);

      // Şiirin kayıt sayısını güncelle
      const siirRef = ref(database, `siirler/${siir.id}`);
      await update(siirRef, {
        kayitSayisi: increment(-1)
      });

      // Yerel state'i güncelle
      setSiirler(siirler.filter(s => s.id !== siir.id));
    } catch (error) {
      console.error('Şiir kaldırılırken hata oluştu:', error);
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
          <p className="mt-4 text-gray-600">Yükleniyor...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-3xl mx-auto">
        <h1 className="text-3xl font-bold text-gray-900 mb-8">Kaydettiklerim</h1>
        {siirler.length === 0 ? (
          <div className="bg-white rounded-lg shadow p-6 text-center">
            <p className="text-gray-500">Henüz kaydedilmiş şiir bulunmuyor.</p>
          </div>
        ) : (
          <div className="space-y-6">
            {siirler.map((siir) => (
              <div key={siir.id} className="bg-white rounded-lg shadow p-6">
                <div className="flex justify-between items-start mb-4">
                  <div>
                    <h2 className="text-xl font-bold text-gray-900">{siir.baslik}</h2>
                    <p className="text-sm text-gray-500 mt-1">{siir.sair}</p>
                  </div>
                  <button
                    onClick={() => handleKaydetKaldir(siir)}
                    className="text-red-600 hover:text-red-800"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fillRule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clipRule="evenodd" />
                    </svg>
                  </button>
                </div>
                <p className="text-gray-600 whitespace-pre-line">{siir.icerik}</p>
                <p className="text-sm text-gray-500 mt-4">
                  Kayıt Tarihi: {new Date(siir.kayitTarihi).toLocaleDateString('tr-TR')}
                </p>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
} 

